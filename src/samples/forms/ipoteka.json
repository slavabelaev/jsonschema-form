{
  "$schema": "../../package/schemas/form-props.schema.json",
  "schema": {
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "Заявка на ипотечное кредитование",
    "properties": {
      "personal": {
        "description": "Получите +20% к одобрению, заполнив первый шаг",
        "properties": {
          "lastName": {
            "title": "Фамилия",
            "description": "Укажите точно как в паспорте",
            "type": "string"
          },
          "firstName": {
            "title": "Имя",
            "description": "Укажите точно как в паспорте",
            "type": "string"
          },
          "middleName": {
            "title": "Отчество",
            "description": "Укажите точно как в паспорте",
            "type": "string"
          },
          "hasMiddleName": {
            "title": "По паспорту без отчества",
            "type": "boolean",
            "default": false
          },
          "phone": {
            "title": "Мобильный телефон",
            "description": "Мы отправим решение по заявке на указанный номер",
            "type": "string",
            "pattern": "+7[0-9]{11}",
            "examples": ["+7 (901) 123-45-67"],
            "x-errorMessages": {
              "pattern": "Телефон указан неверно. Должно быть 11 цифр, например: ${examples[0]}"
            }
          },
          "email": {
            "title": "Электронная почта",
            "description": "На данный email будет направлена информация по заявке",
            "type": "string",
            "format": "email",
            "examples": ["example@domain.ru"],
            "x-errorMessages": {
              "format": "Email введен некорректно. Пример: ${examples[0]}"
            }
          },
          "region": {
            "title": "Регион недвижимости",
            "enum": ["Москва и МО", "Санкт-Петербург и ЛО", "Белгород и Белгородская область", "Барнаул и Алтайский край", "Владимир и Владимирская область", "Воронеж и Воронежская область", "Волгоград и Волгоградская область", "Екатеринбург и Свердловская область", "Владивосток и Приморский край", "Ижевск и Удмуртская республика", "Иркутск и Иркутская область", "Казань и Республика Татарстан", "Калининград и Калининградская область", "Калуга и Калужская область", "Кемерово и Кемеровская область", "Краснодар и Краснодарский край", "Красноярск и Красноярский край", "Липецк и Липецкая область", "Нижний Новгород и Нижегородская область", "Новосибирск и Новосибирская область", "Новокузнецк", "Омск и Омская область", "Оренбург и Оренбургская область", "Пенза и Пензенская область", "Пермь и Пермский край", "Псков и Псковская область", "Ростов-на-Дону и Ростовская область", "Рязань и Рязанская область", "Самара и Самарская область", "Саратов и Саратовская область", "Тюмень и Тюменская область", "Тверь и Тверская область", "Томск и Томская область", "Тула и Тульская область", "Ульяновск и ульяновская область", "Уфа и Республика Башкортостан", "Хабаровск и Хабаровский край", "Челябинск и Челябинская область", "Чебоксары и Чувашская Республика", "Ярославль и Ярославская область"]
          },
          "confirmed": {
            "title": "Я соглашаюсь с [условиями](https://example.com) и даю свое [согласие на обработку](https://example.com) и использование моих персональных данных, и разрешаю сделать запрос в бюро кредитных историй",
            "type": "boolean",
            "default": false
          }
        },
        "dependencies": {
          "hasMiddleName": {
            "oneOf": [
              {
                "properties": {
                  "hasMiddleName": {
                    "const": true
                  },
                  "middleName": {
                    "readOnly": true
                  }
                }
              },
              {
                "properties": {
                  "hasMiddleName": {
                    "const": false
                  },
                  "middleName": {
                    "readOnly": false
                  }
                }
              }
            ]
          }
        }
      }
    }
  },
  "uiSchema": {
    "ui:template": "stepper",
    "personal": {
      "phone": {
        "ui:gridColumn": "1 / 7"
      },
      "email": {
        "ui:gridColumn": "7 / 13"
      },
      "region": {
        "ui:widget": "input-autocomplete"
      }
    }
  }
}
